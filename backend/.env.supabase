# Travelogo Environment Configuration - Supabase Version
# Copy this to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# ===========================================
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your_password_here@db.your_project_ref.supabase.co:5432/postgres

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
SUPABASE_URL=https://your_project_ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# AI SERVICE API KEYS
# ===========================================

# OpenAI API key (primary LLM provider)
OPENAI_API_KEY=your_openai_api_key

# OpenRouter API key (alternative LLM provider)
OPENROUTER_API_KEY=your_openrouter_api_key

# Exa API key (for web search and research)
EXA_API_KEY=your_exa_api_key

# FireCrawl API key (for web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key

# ===========================================
# WEB SCRAPING CONFIGURATION
# ===========================================

# Bright Data credentials (for advanced web scraping)
BRIGHT_DATA_API_TOKEN=your_bright_data_api_token
BRIGHT_DATA_BROWSER_AUTH=your_bright_data_browser_auth

# ===========================================
# CLOUD STORAGE CONFIGURATION
# ===========================================

# Cloudflare R2 configuration (for file storage)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application environment
APP_ENV=development

# API configuration
API_HOST=localhost
API_PORT=8000

# Logging level
LOG_LEVEL=INFO

# ===========================================
# INSTRUCTIONS
# ===========================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual API keys and credentials
# 3. Never commit the .env file to version control
# 4. See SUPABASE_SETUP.md for detailed setup instructions
